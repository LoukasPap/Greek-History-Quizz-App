<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Quapp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>

    </style>

    <style name="register_field" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/white</item>
        <item name="boxStrokeWidth">2dp</item>
    </style>

    <style name="SettingMenu.PopupMenu" parent="Widget.AppCompat.PopupMenu">
        <item name="background">@drawable/custom_popup_background</item>
        <item name="fontFamily">@font/rubik_light</item>
    </style>
</resources>

    <!-- Variant: color for toolbar (the part in top of the phone where it shows time, notifications, battery etc.)-->
